@model IEnumerable<Rahmano_Case.Models.Article>

@{
    ViewBag.Title = "List";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Articles List </h2>
        </div>
        <div class="col-6 text-right">
            @if (Session["User_Name"] == null)
            {
            <button disabled="disabled" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;Create&nbsp;New</button>
            }
            else
            {
                <a href="Create/0" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;Create&nbsp;New</a>
            }
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Publish
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="150px">@obj.Article_Publish</td>
                        <td width="30%">@obj.Article_Title</td>
                        <td>@obj.Article_Desc</td>
                        <td width="100px" class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a href="~/Articles/create/@obj.Article_ID" asp-action="Edit" class="btn btn-primary mx-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Category" asp-route-Id="@obj.Article_ID" asp-action="Delete" class="btn btn-danger mx-1">
                                    <i class="far fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
    }
    @ViewBag.comment
</div>