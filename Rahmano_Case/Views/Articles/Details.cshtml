@model Rahmano_Case.Models.Article

@{
    ViewBag.Title = "Details";
}

<div class="jumbotron" style="margin-right:-25px;">
    <h3 style="margin-top:-30px;">@Model.Article_Title</h3>
    <label style="font-weight:100">@Model.Article_Publish</label><label class="navbar-right" style="margin-right:0px;font-weight:100">@Model.User_Name</label>

    <span style="font-style:italic;font-size:large;">
        <p>@Model.Article_Desc</p>
    </span>
    <br /><br />
    <span style="font-size: large;">
        <p class="text-secondary">@Html.Raw(Model.Article_Text)</p>
    </span>
</div>

<div class="container" style="border:outset;">
    <h2>Chat (@ViewBag.Name)</h2>
    <input type="text" style="width:100%;" id="message" />
    @if (ViewBag.Name == null)
    {
        <input type="button" disabled="disabled" id="sendmessage" value="Send" />
    }
    else
    {
        <input type="button" id="sendmessage" value="Send" />
    }
    <input type="hidden" id="aid" value="@ViewBag.ArtID" />
    <input type="hidden" id="displayname" value="@ViewBag.Name" />
    <ul id="discussion"></ul>
</div>

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.4.3.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(document).ready(function () {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("loadMessage")',
                dataType: 'json',
                data: { id: $('#aid').val()},
                success: function (result) {
                    $.each(result, function (i, cmt) {
                        $('#discussion').append('<li><strong>(' + htmlEncode(cmt.Comment_Create) + ') - ' + htmlEncode(cmt.User_Name) + '</strong>: ' + htmlEncode(cmt.comment) + '</li>');
                    });
                    return false;
                },
                error: function (ex) {
                    alert(JSON.stringify(ex));
                    return false;
                }
            });
        })

        $(function () {
            // Reference the auto-generated proxy for the hub.
            var chat = $.connection.chatHub;
            // Create a function that the hub can call back to display messages.
            chat.client.addNewMessageToPage = function (name, message) {
                $('#discussion').append('<li><strong>' + htmlEncode(name) + '</strong>: ' + htmlEncode(message) + '</li>');
            };
            // Get the user name and store it to prepend to messages.
            // Set initial focus to message input box.
            //$('#message').focus();
            // Start the connection.
            $.connection.hub.start().done(function () {
                $('#sendmessage').click(function () {
                    var date = new Date();
                    var curtm =
                        ("00" + date.getDate()).slice(-2) + "/" +
                        ("00" + (date.getMonth() + 1)).slice(-2) + "/" +
                        date.getFullYear() + " " +
                        ("00" + date.getHours()).slice(-2) + ":" +
                        ("00" + date.getMinutes()).slice(-2) + ":" +
                        ("00" + date.getSeconds()).slice(-2);

                    // Call the Send method on the hub.
                    chat.server.send('(' + curtm + ') - ' + $('#displayname').val(), $('#message').val());

                    //Save message to Database:
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("saveMessage")',
                        dataType: 'json',
                        data: { id: $('#aid').val(), wkt: curtm, message: $('#message').val() },
                        success: function (result) {
                            return false;
                        },
                        error: function (ex) {
                            alert(JSON.stringify(ex));
                            return false;
                        }
                    });

                    // Clear text box and reset focus for next comment.
                    $('#message').val('').focus();
                });
            });
        });
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}