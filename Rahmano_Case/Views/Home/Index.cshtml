    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1 style="margin-top:-30px;">Case</h1>
    <p class="lead">
        This case is intended for assessment employee selection of PT. Dayin Mitra (this example of adopting kaskus)....
    </p>
    <span class="lead">
        Where the Case application includes the following features:<br />
        - LogIn/SignIn<br />
        - View Articles<br />
